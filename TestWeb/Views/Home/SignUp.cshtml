<!DOCTYPE html>
@{
	/*this is to eliminate the nav bar in header in the homepage*/

	Layout = null;
	<title>@ViewBag.Title - My ASP.NET Application</title>
}
@model TestWeb.Models.Customer
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/Login.css" rel="stylesheet" type="text/css " runat="server" />


</head>
<body>
	<div class="container">
		<form id="SignUp" action="@Url.Action("SignUp","Home")" method="post">

			<div class="form-group">

				@Html.Label("Username")
				@Html.EditorFor(Model => Model.UserName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">Password:</label>
				@Html.EditorFor(Model => Model.Password, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">FirstName:</label>
				@Html.EditorFor(Model => Model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">LastName:</label>
				@Html.EditorFor(Model => Model.LastName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">Address:</label>
				@Html.EditorFor(Model => Model.Address, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">PostalCode:</label>
				@Html.EditorFor(Model => Model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<label for="pwd">Email:</label>
				@Html.EditorFor(Model => Model.Email, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="checkbox">
				<label><input type="checkbox" name="remember"> Remember me</label>
			</div>
			<button type="submit" id="SignUp" class="btn btn-default" onclick="myFunction()" >Register</button>
		</form>

		<table style="font-family:Arial">

			<tr>
				<td>
					@ViewBag.Message
				</td>

			</tr>
			<tr>
				<td>
					@Model.UserName
				</td>

			</tr>

			<tr>
				<td>
					@Model.Password
				</td>
			</tr>
			<tr>
				<td>
					@Model.FirstName
				</td>
			</tr>
			<tr>
				<td>
					@Model.LastName
				</td>
			</tr>
			<tr>
				<td>
					@Model.Address
				</td>
			</tr>
			<tr>
				<td>
					@Model.PostalCode
				</td>
			</tr>
			<tr>
				<td>
					@Model.Email
				</td>
			</tr>



		</table>


	</div>
	<script>
		function myFunction() {
			if (document.getElementById('email').value != "" && document.getElementById('pwd').value != "") {
				document.getElementById("Login").innerHTML = "Login";
		
			}

		}
	</script>
</body>
</html>
